@model System.Exception
@{
    ViewBag.Title = "Error";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="pull-left">500 - @ViewBag.Title</h4>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <p>Oops! Something went wrong</p>
                <p>Internal Server Error. Please contact administrator or try after some time.</p>
                <div class="hide">
                    @if(Model != null)
                    {
                        @Model.Message
                        <br />
                        @Model.ToString()
                    }
                </div>
                <a href="~/" class="btn btn-default">Home</a>
            </div>
        </div>
    </div>
</div>